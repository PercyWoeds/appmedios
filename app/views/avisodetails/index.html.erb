<p id="notice"><%= notice %></p>

<h1>Listado Programas / Elemento </h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Comentario </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @avisodetails.each do |avisodetail| %>
      <tr>
        <td><%= avisodetail.descrip %></td>
        <td><%= avisodetail.comments %></td>
        <td><%= link_to 'Show', avisodetail %></td>
        <td><%= link_to 'Edit', edit_avisodetail_path(avisodetail) %></td>
        <td><%= link_to 'Destroy', avisodetail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Programa', new_avisodetail_path %>



<h2>Importar Archivo  "*.csv"</h2>

<%= form_tag import_avisodetails_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Importar " %>
<% end %>
