<p id="notice"><%= notice %></p>

<h1>Listing Campania</h1>

<table>
  <thead>
    <tr>
      <th>Descrip</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campania.each do |campanium| %>
      <tr>
        <td><%= campanium.descrip %></td>
        <td><%= campanium.comments %></td>
        <td><%= link_to 'Show', campanium %></td>
        <td><%= link_to 'Edit', edit_campanium_path(campanium) %></td>
        <td><%= link_to 'Destroy', campanium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

