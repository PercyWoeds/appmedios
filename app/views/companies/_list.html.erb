<p>
  Select a company to add products, create invoices, process orders, etc.
</p>

<% if @companies.count > 0 %>
  <div class="companies">
    <% for company in @companies %>
      <div class="item">
        <div class="title">
          <%= link_to company.name, company %>
        </div>
        <div class="metadata">
          <%= link_to "View", company %>
          <% if(company.own(current_user)) %>
            &#183;
            
          <% end %>
        </div>
        <%= br() %>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="error">
    You have not yet created any companies.  You can <%= link_to "create one", new_company_path  %> now.
  </p>
<% end %>

