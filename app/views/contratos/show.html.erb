
<h1>
  <%= image_tag("supplier_48.png", :class => "vmiddle") %>
    <%= @contrato.code  %>
</h1>

<%= hr() %>


<p id="notice"><%= notice %></p>


<% if @contrato.code %>
  <p>
    <b>Contrato Nro:</b>
    <%= link_to @contrato.code, @contrato.code %>
  </p>
<% end %>


<p>
  <strong>Fecha:</strong>
  <%= @contrato.fecha %>
</p>

<p>
  <strong>Customer:</strong>
  <%= @contrato.customer.name %>
</p>

<p>
  <strong>Medio:</strong>
  <%= @contrato.medio.descrip %>
</p>

<p>
  <strong>Importe:</strong>
  <%= @contrato.importe %>
</p>

<p>
  <strong>Moneda:</strong>

  <%= @contrato.get_moneda %>

</p>

<p>
  <strong>Tipocontrato:</strong>
  
 <%= @contrato.get_contrato %>

</p>

<p>
  <strong>Nrocuotas:</strong>
  <%= @contrato.nrocuotas %>
</p>

<p>
  <strong>Comision1:</strong>
  <%= @contrato.comision1 %>
</p>

<p>
  <strong>Comision2:</strong>
  <%= @contrato.comision2 %>
</p>

<div class="row">

  <div class="col-md-12">
    <div class="contrato_cuota">
      <h3> Cuotas   </h3>
      <% if @contrato.quotes %>
      <%= render @contrato.quotes %>
      <% end %>
      <div>
      <%= link_to "Agregar cuota  ", new_contrato_quote_path(@contrato), class: "button" %>  
    
      </div>
    </div>

  </div>  
</div>


<%= link_to 'Editar', edit_contrato_path(@contrato) %> |
