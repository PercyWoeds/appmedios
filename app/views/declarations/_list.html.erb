<% if @deliveries.count > 0 %>
  <table>
    <thead>
      <tr>
        <th class="bordered_right bordered_bottom" style="width: 100px;">
          Guia
        </th>
        <th class="bordered_right bordered_bottom" style="width: 350px;">
          Cliente
        </th>
        <th class="bordered_right bordered_bottom">
          Total
        </th>
        <th class="bordered_right bordered_bottom">
          Fecha
        </th>
        <th class="bordered_right bordered_bottom">
          Procesado
        </th>
        <th class="bordered_right bordered_bottom" colspan="3">
          Opciones 
        </th>
      </tr>
    </thead>
    <tbody>
    
      <% for delivery in @deliveries %>
        <tr>
          <td class="bordered_right bordered_bottom">
            <%= delivery.code %>
          </td>
          <td class="bordered_right bordered_bottom">
            <%= link_to delivery.customer.name, delivery.customer, :title => "Go to customer" %>
          </td>
          <td class="bordered_right bordered_bottom right">
            $<%= money(delivery.total) %>
          </td>
          <td class="bordered_right bordered_bottom">
            <%= doDate(delivery.created_at) %>
          </td>
          <td class="bordered_right bordered_bottom <%= delivery.processed_color %>">
            <%= delivery.get_processed_short %>
          </td>
          <td class="bordered_right bordered_bottom">
            <%= link_to "Ver", delivery %>
          </td>
          <td class="bordered_right bordered_bottom">
            <%= link_to 'Eliminar', delivery, :confirm => 'Are you sure?', :method => :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="error">
    We couldn't find any deliveries.
  </p>
<% end %>