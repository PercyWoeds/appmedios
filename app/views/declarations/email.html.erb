<div class="breadcrumbs">
  <%= link_to "My companies", "/companies" %> &raquo;
  <%= link_to @company.name, @company %> &raquo;
  <%= link_to "deliveries", "/companies/deliveries/#{@company.id}" %> &raquo;
  <%= link_to @delivery.identifier, @delivery %>
</div>

<h1>
  <%= image_tag("supplier_48.png", :class => "vmiddle") %>
  Send delivery via email
</h1>

<%= hr() %>

<h3>
  <%= link_to @delivery.identifier, @delivery %>
</h3>

<%= hr() %>

<form method="post" action="/deliveries/do_email/<%= @delivery.id %>">
  <strong>Email:</strong>
  <input type="text" name="email" value="<%= @delivery.customer.email %>" onclick="$(this).select();" />
  <input type="submit" value="Send" class="bold" />
</form>

<%= hr() %>

<div class="button">
  <%= link_to 'Show delivery', @delivery %>
  <%= link_to 'Back', "/companies/deliveries/#{@company.id}" %>
</div>