<% if @inventories.count > 0 %>
  <table>
    <thead>
      <tr>
        <th class="bordered_right bordered_bottom" style="width: 100px;">
          Invoice
        </th>
        <th class="bordered_right bordered_bottom" style="width: 350px;">
          Customer
        </th>
        <th class="bordered_right bordered_bottom">
          Total
        </th>
        <th class="bordered_right bordered_bottom">
          Date
        </th>
        <th class="bordered_right bordered_bottom">
          Processed
        </th>
        <th class="bordered_right bordered_bottom" colspan="3">
          Options
        </th>
      </tr>
    </thead>
    
    <tbody>
    
      <% for inventory in @inventories %>
        <tr>
          <td class="bordered_right bordered_bottom">
            <%= link_to inventory.id, inventory, :title => "Ir a factura" %>
          </td

          <td class="bordered_right bordered_bottom right">
            $<%= money(inventory.logicalStock) %>
          </td>

          <td class="bordered_right bordered_bottom right">
            $<%= money(inventory.physicalStock) %>
          </td>

          <td class="bordered_right bordered_bottom right">
            $<%= money(inventory.cost) %>
          </td>
          <td class="bordered_right bordered_bottom right">
            $<%= money(inventory.total) %>
          </td>
          
          <td class="bordered_right bordered_bottom">
            <%= doDate(inventory.created_at) %>
          </td>

          <td class="bordered_right bordered_bottom">
            <%= link_to "View", inventory %>
          </td>
          <td class="bordered_right bordered_bottom">
            <%= link_to "Edit", edit_inventory_path(inventory) %>
          </td>
          <td class="bordered_right bordered_bottom">
            <%= link_to 'Delete', inventory, :confirm => 'Are you sure?', :method => :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="error">
    We couldn't find any invoices.
  </p>
<% end %>