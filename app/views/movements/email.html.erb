<div class="breadcrumbs">
  <%= link_to "My companies", "/companies" %> &raquo;
  <%= link_to @company.name, @company %> &raquo;
  <%= link_to "movements", "/companies/movements/#{@company.id}" %> &raquo;
  <%= link_to @movement.identifier, @movement %>
</div>

<h1>
  <%= image_tag("invoice_48.png", :class => "vmiddle") %>
  Enviar por email
</h1>

<%= hr() %>

<h3>
  <%= link_to @movement.identifier, @movement %>
</h3>

<%= hr() %>

<form method="post" action="/movements/do_email/<%= @movement.id %>">
  <strong>Email:</strong>
  <input type="text" name="email" value="<%= @movement.customer.email %>" onclick="$(this).select();" />
  <input type="submit" value="Send" class="bold" />
</form>

<%= hr() %>

<div class="button">
  <%= link_to 'Show movement', @movement %>
  <%= link_to 'Back', "/companies/movements/#{@company.id}" %>
</div>