<p class="bold big">
  Productos:
</p>

  <table>
    <thead>
      <tr>
        <th class="small bordered_bottom bordered_right">
          Producto
        </th>
        <th class="small bordered_bottom bordered_right">
          Cantidad 
        </th>
        
      </tr>
    </thead>
    <tbody>
      <% for product in @products %>
        <tr>
          <td class="small bordered_bottom bordered_right" style="width: 220px;">
            <a href="#" onclick="removeItemFromMovement(<%= product.i %>); return false;" title="Remove product from movement"><%= product.full_name %></a>
            [<a href="#" onclick="removeItemFromMovement(<%= product.i %>); return false;" title="Remove product from movement">X</a>]
          </td>
          <td class="small bordered_bottom bordered_right">
            <%= product.quantity %>
          </td>
        
        </tr>
      <% end %>
    </tbody>
  </table>
