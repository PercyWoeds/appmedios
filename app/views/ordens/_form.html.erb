    <%= f.select :contrato_id,options_from_collection_for_select(@contratos,'id','code',:selected => @orden.contrato_id)%>
    <% else %>
      <%= f.select :contrato_id,options_from_collection_for_select(@contratos,'id','code') %>
    <% end %>
    </div>


    <div class="field">  
    <%= f.label :fecha %><br />
    <%= f.text_field :fecha ,value:Time.now.strftime("%d/%m/%Y") %>
    </div>


   <div class="field">
      <%= f.label :medio_id,"Medios  " %><br />
