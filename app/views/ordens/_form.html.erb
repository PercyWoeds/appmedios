    <%= f.select :medio_id,options_from_collection_for_select(@medios,'id','descrip',:selected => @orden.medio_id)%>
    <% else %>
      <%= f.select :medio_id,options_from_collection_for_select(@medios,'id','descrip') %>
    <% end %>
    </div>


   <div class="field">
