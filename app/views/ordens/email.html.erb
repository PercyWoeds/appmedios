<div class="breadcrumbs">
  <%= link_to "My companies", "/companies" %> &raquo;
  <%= link_to @company.name, @company %> &raquo;
  <%= link_to "ordens", "/companies/ordens/#{@company.id}" %> &raquo;
  <%= link_to @orden.identifier, @orden %>
</div>

<h1>
  <%= image_tag("invoice_48.png", :class => "vmiddle") %>
  Send orden via email
</h1>

<%= hr() %>

<h3>
  <%= link_to @orden.identifier, @orden %>
</h3>

<%= hr() %>

<form method="post" action="/ordens/do_email/<%= @orden.id %>">
  <strong>Email:</strong>
  <input type="text" name="email" value="<%= @orden.customer.email %>" onclick="$(this).select();" />
  <input type="submit" value="Send" class="bold" />
</form>

<%= hr() %>

<div class="button">
  <%= link_to 'Show orden', @orden %>
  <%= link_to 'Back', "/companies/ordens/#{@company.id}" %>
</div>