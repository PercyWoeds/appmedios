<div class="breadcrumbs">
  <%= link_to "My companies", "/companies" %> &raquo;
  <%= link_to @company.name, @company %> &raquo;
  <%= link_to "outputs", "/companies/outputs/#{@company.id}" %> &raquo;
  <%= link_to @output.identifier, @output %>
</div>

<h1>
  <%= image_tag("output_48.png", :class => "vmiddle") %>
  Send output via email
</h1>

<%= hr() %>

<h3>
  <%= link_to @output.identifier, @output %>
</h3>

<%= hr() %>

<form method="post" action="/outputs/do_email/<%= @output.id %>">
  <strong>Email:</strong>
  <input type="text" name="email" value="<%= @output.customer.email %>" onclick="$(this).select();" />
  <input type="submit" value="Send" class="bold" />
</form>

<%= hr() %>

<div class="button">
  <%= link_to 'Show output', @output %>
  <%= link_to 'Back', "/companies/outputs/#{@company.id}" %>
</div>