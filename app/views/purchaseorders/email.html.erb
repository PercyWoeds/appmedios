<div class="breadcrumbs">
  <%= link_to "My companies", "/companies" %> &raquo;
  <%= link_to @company.name, @company %> &raquo;
  <%= link_to "purchaseorders", "/companies/purchaseorders/#{@company.id}" %> &raquo;
  <%= link_to @purchaseorder.identifier, @purchaseorder %>
</div>

<h1>
  <%= image_tag("invoice_48.png", :class => "vmiddle") %>
  Enviar documento via email
</h1>

<%= hr() %>

<h3>
  <%= link_to @purchaseorder.identifier, @purchaseorder %>
</h3>

<%= hr() %>

<form method="post" action="/purchaseorders/do_email/<%= @purchaseorder.id %>">
  <strong>Email:</strong>
  <input type="text" name="email" value="<%= @purchaseorder.customer.email %>" onclick="$(this).select();" />
  <input type="submit" value="Send" class="bold" />
</form>

<%= hr() %>

<div class="button">
  <%= link_to 'Show purchaseorder', @purchaseorder %>
  <%= link_to 'Back', "/companies/purchaseorders/#{@company.id}" %>
</div>