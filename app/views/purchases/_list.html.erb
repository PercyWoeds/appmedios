<% if @purchases.count > 0 %>

<h1>Listing Purchases</h1>

<table>
  <thead>
    <tr>
      <th>Document type</th>
      <th>Document</th>
      <th>Date1</th>
      <th>Date2</th>
      <th>Exchange</th>
      
      <th>Money type</th>
      <th>Discount</th>
      
      <th>Payable amount</th>
      <th>Tax amount</th>
      <th>Total amount</th>
      <th>Status </th>
      
      <th>Charge</th>
      <th>Payment</th>
      <th>Balance</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.document_type_id %></td>
        <td><%= purchase.document %></td>
        <td><%= purchase.date1 %></td>
        <td><%= purchase.date2 %></td>
        <td><%= purchase.exchange %></td>
        <td><%= purchase.money_type %></td>
        <td><%= purchase.discount %></td>
      
        <td><%= purchase.payable_amount %></td>
        <td><%= purchase.tax_amount %></td>
        <td><%= purchase.total_amount %></td>
        <td <%= purchase.processed_color %> ><%= purchase.get_processed_short %></td>
      
        <td><%= purchase.charge %></td>
        <td><%= purchase.payment %></td>
        <td><%= purchase.balance %></td>
      
        <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Purchase', new_purchase_path %>

<% else %>
  <p class="error">
    Nosotros no podemos encontrar ninguna factura
  </p>
<% end %>


