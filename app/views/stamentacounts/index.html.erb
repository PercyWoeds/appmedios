<p id="notice"><%= notice %></p>

<h1>Listado movimiento cuentas </h1>

<table>
  <thead>
    <tr>
      <th>Id</td>
      
      <th>Cuenta bancaria</th>
      <th>Fec.Inicial</th>
      <th>Fec.final </th>
      <th>Saldo inicial</th>
      <th>Saldo final</th>
      <th colspan="3"></th> 
    </tr>
  </thead>

  <tbody>
    <% @stamentacounts.each do |stamentacount| %>
      <tr>
        <td><%= stamentacount.id %></td>
        
        <td><%= stamentacount.bank_acount.number %></td>
        <td><%= stamentacount.fecha1.strftime("%d/%m/%Y") %></td>
        <td><%= stamentacount.fecha2.strftime("%d/%m/%Y") %></td>
        <td><%= stamentacount.saldo_inicial %></td>
        <td><%= stamentacount.saldo_final %></td>
        <td><%= link_to 'Ver', stamentacount %></td>
        <td><%= link_to 'Editar', edit_stamentacount_path(stamentacount) %></td>
        <td><%= link_to 'Eliminar', stamentacount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="buttons">

<%= link_to 'Nuevo Movimiento', new_stamentacount_path %>
<%= link_to 'Regresar', "/companies/cpagar/1" %>

</div>
