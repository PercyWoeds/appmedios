<div class="breadcrumbs">
  <%= link_to "My companies", "/companies" %> &raquo;
  <%= link_to @company.name, @company %> &raquo;
  <%= link_to "supplierpayments", "/companies/supplierpayments/#{@company.id}" %> &raquo;
  <%= link_to @supplierpayment.identifier, @supplierpayment %>
</div>

<h1>
  <%= image_tag("supplierpayment_48.png", :class => "vmiddle") %>
  Send supplierpayment via email
</h1>

<%= hr() %>

<h3>
  <%= link_to @supplierpayment.identifier, @supplierpayment %>
</h3>

<%= hr() %>

<form method="post" action="/supplierpayments/do_email/<%= @supplierpayment.id %>">
  <strong>Email:</strong>
  <input type="text" name="email" value="<%= @supplierpayment.customer.email %>" onclick="$(this).select();" />
  <input type="submit" value="Send" class="bold" />
</form>

<%= hr() %>

<div class="button">
  <%= link_to 'Show supplierpayment', @supplierpayment %>
  <%= link_to 'Back', "/companies/supplierpayments/#{@company.id}" %>
</div>