<%= simple_form_for(@tipocambio) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">


	<div class="field">
      <%= f.label :dia , "Fecha*", :class => "bold" %><br />
      <%= f.date_field :dia, value: Time.now.strftime("%d/%m/%Y") %>
    </div>

    <div class="field">
      <%= f.label :compra,"Compra " %><br />
      <%= f.number_field :compra %>
    </div>

	<div class="field">
      <%= f.label :venta,"Venta" %><br />
      <%= f.number_field :venta %>
    </div>
    
   

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
